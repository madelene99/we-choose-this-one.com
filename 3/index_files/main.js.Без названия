var $button = $('.js-button'),
    $popUp = $('.js-popup'),
    $popUpContent = $popUp.find('.js-popup__content');

function showPopUp() {
    $popUp.show();
}
function hidePopUp() {
    $popUp.hide();
}

$button.on('click', showPopUp);
$popUp.on('click', hidePopUp);
$popUpContent.on('click', function (ev) {
    ev.stopPropagation();
});


